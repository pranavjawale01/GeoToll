<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="24dp"/>

    <!-- TextView to display the user's name -->
    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <!-- TextView to display user details (e.g., email) -->
    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/darker_gray" />

    <!-- Toggle button for tracking -->
    <ToggleButton
        android:id="@+id/toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:textOn="Stop Tracking"
        android:textOff="Start Tracking"
        android:layout_marginBottom="16dp"
        android:background="@drawable/toggle_background"
        android:textColor="@android:color/white" />

    <!-- TextView to display total distance -->
    <TextView
        android:id="@+id/distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Distance: 0.00 meters"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/holo_blue_dark" />

    <!-- TextView to display speed in kmph -->
    <TextView
        android:id="@+id/speed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: 0.0 km/h"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/current_distance_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Distance: ??? Time Interval: ???"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/speed_text_view" />


    <!-- TextView to display real-time coordinates -->
    <TextView
        android:id="@+id/coordinates_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat: 0.000000, Long: 0.000000"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_green_dark" />

    <!-- Button for logout -->
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="32dp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/error_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/highway_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\nHighway Status"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/highway_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highway Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/total_highway_distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Highway Distance: 0.00 meters"
        android:textSize="16sp" />



</LinearLayout>